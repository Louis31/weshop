    });
    
	//供应商下拉数据
    var gysStore = new Ext.data.JsonStore({
		url: ctx+'/gys/findGysComb.do',
	    root: 'root',
	    totalProperty: 'total',
	    fields: ['value','text'],
	    listeners:{
	    	load:function(s){
	    		r = s.getAt(0);
	    		if(r){
	    			Ext.getCmp("gyscombo").onSelect(r, 0);
	    		}
	    	}
	    }
	});
    
	
	
    //  add
