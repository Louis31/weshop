Ext.onReady(function(){
	
	Ext.QuickTips.init();
	var InfoObj = [
		{ name:'id', type:'int'},
		{ name:'infoname', type:'string'},
		{ name:'pid', type:'int'}
	];
	var v_spid="0", v_spname=""
	//商品数据
	var jhspStore = new Ext.data.JsonStore({
	    url: ctx+'/infortree/getInformationTree.do',
	    root: 'root',
	    totalProperty: 'total',
	    fields: pid,
	    listeners:{beforeload:function(a){a.baseParams={start:v_start, limit:v_limit};}}
	});
	
